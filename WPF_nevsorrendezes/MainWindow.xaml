<Window x:Class="WPF_nevsorrendezes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_nevsorrendezes"
        mc:Ignorable="d"
        Title="Nevrendez" Height="450" Width="400">
    <Grid>
        <Label
            Content="Rendezés névsor szerint"
            Height="auto"
            Width="auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0 10 0 0"
            FontSize="20"
            FontWeight="DemiBold"
            />
        <Label
            Content="Keresztnevek , elválasztva:"
            Height="auto"
            Width="auto"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20 40 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />
        <TextBox
            x:Name="tbx_nevek"
            Text=""
            Margin="20 80 0 0"
            Height="25"
            Width="360"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            FontSize="16"
            FontWeight="DemiBold"
            />
        <Label
            Content="nevek Listája:"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="30 110 0 0"
            FontSize="14"
            FontWeight="DemiBold"
            />
        <ListBox
            x:Name="lb_nevlista"
            Width="150"
            Height="230"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="30 140 0 0"
            SelectionMode="Single"
            />

        <Label
            Content="Névsorban rendezve:"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0 110 36 0"
            FontSize="14"
            FontWeight="DemiBold"
            />
        <ListBox
            x:Name="lb_nevsorrend"
            Width="150"
            Height="230"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0 140 30 0"
            SelectionMode="Single"
            />
        <Button
            x:Name="bt_nevlistazasa"
            Content="Név listázása"
            Width="150"
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="30 390 0 0" 
         
            />
        <Button
            x:Name="bt_nevsorrendezés"
            Content="Rendez"
            Width="80"
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="220 390 0 0" 
            />

    </Grid>
</Window>
